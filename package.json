        "eslint-plugin-import": "^2.25.3",
        "husky": "^7.0.4",
        "jest": "^27.4.5",
        "jest-puppeteer": "^6.0.3",
        "lint-staged": "^12.1.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.1",
        "typescript": "~4.5.4"
