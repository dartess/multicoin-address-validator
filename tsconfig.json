{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/test/**",
        "src/**/*.test.ts"
    ],
    "compilerOptions": {
        "outDir": "lib",
        "target": "es2016",
        "module": "commonjs",
        "allowJs": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "sourceMap": true
    }
}
